---
import Layout from "../layouts/Layout.astro";
import { ContactForm } from "../components/ContactForm.jsx";
import i18next, { changeLanguage, t } from "i18next";
import Categories from "../components/Categories.astro";

changeLanguage("es");
---

<Layout title={t('site.title')} description={t('site.description')}>
  <main>
    <section
      class='relative w-full h-screen grid place-items-center place-content-center px-4'
    >
      <img
        src='/img/logonewAmof.webp'
        alt='americas mobility of the future'
        class='w-52 absolute top-5 left-5'
      />

      <img
        src={i18next.language === 'es'
          ? '/img/amof_bf_2025.webp'
          : '/img/amof_bf_2025_eng.webp'}
        alt='americas mobility of the future'
        class='absolute top-0 left-0 w-full h-screen object-cover z-[-2]'
      />
      <p class='text-6xl font-bold text-center'>
        <span class='text-[#03CAFE]'>AMERICAS´<br /> mobi</span><span
          class='text-[#001A78]'>lity of the future</span
        >
      </p>
      <p class='text-white font-bold text-3xl w-full text-center'>
        {t('home.slogan')}
      </p>
      <p class='mt-5 text-white font-bold text-5xl'>
        {t('home.event_date')}
      </p>
      <p class='text-white font-bold text-3xl'>
        Poliforum - Léon Guanajuato, México
      </p>
      <div class='mt-10 flex gap-4'>
        <a
          href='#expositor-form'
          class='text-white font-bold flex items-center gap-2 bg-[#60a5fa] p-2 rounded-lg border-white border-2'
        >
          <span set:html={t('home.wanna_be_exhibitor')} />
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='w-6 h-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3'></path>
          </svg>
        </a>
        <a
          href='https://amofexpo.igeco.mx/'
          target='_blank'
          class='text-white font-bold flex gap-2 items-center bg-[#60a5fa] p-2 rounded-lg border-white border-2'
        >
          <span set:html={t('home.know_more')} />
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='w-6 h-6 rotate-[-90deg]'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3'></path>
          </svg>
        </a>
      </div>
      <div
        class='absolute top-0 left-0 w-full h-screen bg-black opacity-30 z-[-1]'
      >
      </div>
    </section>
    <section class='container mx-auto py-10 px-4'>
      <p class='text-4xl text-[#03CAFE] font-bold'>
        AMERICAS´ MOBI<span class='text-[#001A78]'>LITY OF THE FUTURE 2025</span
        >
      </p>
      <p class='mt-5 text-lg'>
        {t('home.about_description')}
      </p>
      <p class='mt-5 text-lg' set:html={t('home.wanna_be_exhibitors')} />
    </section>
    <section class='mt-10' id='expositor-form'>
      <p class='text-3xl font-bold text-center'>
        {t('home.become_exhibitor')}
      </p>
      <ContactForm
        choose={t('home.choose_option')}
        option1={t('home.option_1')}
        option2={t('home.option_2')}
        option3={t('home.option_3')}
        option4={t('home.option_4')}
        option5={t('home.option_5')}
        phone={t('home.phone')}
        message={t('home.message')}
        send={t('home.send')}
        loading={t('home.loading')}
        client:visible
      />
    </section>
    <Categories />
    <section class='py-10 container mx-auto'>
      <p class='text-3xl text-center font-bold text-gray-600 uppercase'>
        {t('home.testimonials')}
      </p>
      <div class='mt-5 grid md:grid-cols-4'>
        <div class='p-4'>
          <lite-youtube
            class='shadow-2xl shadow-white/10 rounded-lg md:h-96'
            videoid='wjfs2AygD_U'
            videotitle='CII IA'></lite-youtube>
        </div>
        <div class='p-4'>
          <lite-youtube
            class='shadow-2xl shadow-white/10 rounded-lg md:h-96'
            videoid='RyWyLJzVM9s'
            videotitle='Siemens'></lite-youtube>
        </div>
        <div class='p-4'>
          <lite-youtube
            class='shadow-2xl shadow-white/10 rounded-lg md:h-96'
            videoid='e5cqOqNDdaE'
            videotitle='Air mobility'></lite-youtube>
        </div>
        <div class='p-4'>
          <lite-youtube
            class='shadow-2xl shadow-white/10 rounded-lg md:h-96'
            videoid='183Ds-5BatU'
            videotitle='Air mobility'></lite-youtube>
        </div>
      </div>
    </section>
  </main>
  <footer
    class='border-t-2'
    style='background-image: linear-gradient(135deg, rgb(3, 40, 126), rgb(0, 110, 234) 50%, rgb(96, 226, 220) 100%)'
  >
    <div
      class='container mx-auto py-5 grid md:grid-cols-3 place-items-center items-center gap-8'
    >
      <a href='https://igeco.mx/' target='_blank'>
        <img
          src='/img/igecologo.webp'
          alt='Italian German Exhibition Group Company'
          class='w-[200px] sm:w-[250px]'
        />
      </a>
      <div class='flex sm:justify-center sm:mt-0'>
        <a
          href='https://www.facebook.com/AmericasMobilityOfTheFuture'
          target='_blank'
          class='text-white hover:text-gray-900'
        >
          <svg
            role='img'
            viewBox='0 0 24 24'
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            class='fill-white hover:fill-gray-900 ms-5'
