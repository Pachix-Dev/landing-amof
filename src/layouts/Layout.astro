    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/webp' href='/img/amof_favicon.webp' />
    <meta name='generator' content={Astro.generator} />
